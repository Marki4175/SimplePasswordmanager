<Window x:Class="WpfApp.SplashWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Splash Window" Height="400" Width="600">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Password Manager" FontSize="36" HorizontalAlignment="Center" Margin="0,0,0,20"/>
            <TextBlock Text="Created by Markus Kaduk" FontSize="16" HorizontalAlignment="Center" Margin="0,0,0,20"/>

            

            <Button Content="Start" Width="100" HorizontalAlignment="Center" Click="StartButton_Click"/>
        </StackPanel>
        
    </Grid>
</Window>
